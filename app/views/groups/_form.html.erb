<%= form_for @group do |f| %>

<div class="form-group">
  <div class="from-group string optional">
    <%= f.label "標題", :class => "string optional control-label"  %>
    <%= f.text_field :title, :class => "string optional form-control"%>
  </div>

  <div class="form-group string optional">
    <%= f.label "敘述", :class => "string optional control-label"%>
    <%= f.text_field :description, :class => "string optional form-control"%>
  </div>
</div>
<%= f.submit "Submit", class: "btn btn-primary", data: { disable_with: "Submiting..." } %>
<% end %>
